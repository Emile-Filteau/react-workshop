{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "esnext", "dom"],
    "jsx": "react",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": ["./typescript/*", "./src/**/*"]
}
